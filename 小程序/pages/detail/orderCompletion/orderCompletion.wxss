/* pages/detail/orderCompletion/orderCompletion.wxss */
.order-head{
  margin: 20rpx;
  padding:10rpx 20rpx 20rpx 20rpx;
  border-bottom: 5rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
}

.order-head-left{
  display: flex;
}

.order-head-left view{
  margin-left: 20rpx;
}

.order-head-left image{
  height: 160rpx;
  width: 160rpx;
  border-radius: 10rpx;
}

.order-head-left-text {
  margin-top: 60rpx;
}

.order-head-left-text text{
  margin:10rpx;
  font-size: 36rpx;
}

.order-head-left-text1{
  color: #FF9800;
}

.order-head-right{
  display: flex;
  flex-direction: column;
}

.order-head-right image{
    height: 60rpx;
    width: 60rpx;
}

.order-head-right text{
  margin-top: 60rpx;
  color: #41ADBD;
  font-size: 32rpx;
}

/* 订单列表 */
.order-con{
  margin: 20rpx;
}

.order-li{
  padding: 20rpx 10rpx;
  border-bottom: 5rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
}