/**index.wxss**/
.search{
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  padding: 15rpx 0;
}

.search view{
  background-color: #fff;
  border-radius: 5px;
  width: 80%;
  padding: 6rpx 30rpx;
}

.search .search-text-1{
  font-size: 32rpx;
  margin-left: 8rpx;
  color: #707070;
}

/* banner */
.banner image{
  width: 100%;
}

.classify {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 30rpx;
}

.classify view{
  display: flex;
  flex-direction: column;
}

.classify view image{
  width: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
}

.classify view text{
  font-size: 32rpx;
}

/* 推荐城市 */
.recommend-city{
  margin: 20rpx;
}

.recommend-tit{
  display: flex;
  flex-direction: column;
}

.recommend-tit text{
  display: flex;
  justify-content: center;
}

.recommend-tit .recommend-text1{
  color: #41ADBD;
  font-size: 40rpx;
}

.recommend-tit .recommend-text2{
  color: #898888;
  font-size: 28rpx;
}

.recommend-con{
  margin: 20rpx 0;
}

.scroll-view_H{
  width: 100%;
  white-space: nowrap; 
}

.scroll-view-item_H{
  width: 350rpx;
  height: 100px;
  display: inline-block;
}

.scroll-view-item_H image{
  width: 95%;
  height: 240rpx;
  border-radius: 5rpx;
}

/* 推荐房源 */
.recommend-city-con{
  background-color: #f0f0f0;
  padding: 10rpx 15rpx;
  margin-top: 20rpx;
}

.recommend-img image{
  width: 100%;
  border-radius: 5px;
  height: 340rpx;
}

.recommend-city-li{
  margin-top: 20rpx;
}

.recommend-city-li-foot{
  background-color: #fff;
  border-radius: 5px;
  padding: 30rpx 20rpx 20rpx 20rpx;
  margin-top: -20rpx;
  box-shadow: 1px 2px 0px 0px rgba(223, 223, 223, 1);
  border: 1px solid rgba(255, 255, 255, 1);
}

.recommend-city-li-foot1{
  display: flex;
  justify-content: space-between;
}

.recommend-city-li-foot1 image{
  height: 44rpx;
  width: 44rpx;
}

.recommend-city-li-foot2{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.recommend-city-li-foot2 image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.recommend-left{
  display: flex;
}

.recommend-left text{
  font-size: 28rpx;
  margin-top: 10rpx;
}

.recommend-right text{
  color: #FF9800;
  font-size: 44rpx;
}

.index-btn{
  width: 40%;
  color: #41ADBD;
  margin: 20rpx auto;
  border: none;
  font-size: 30rpx;
  background-color: #fff;
}